<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciar Monitores</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Gerenciamento de Monitores</h1>
    <nav>
        <a href="/">Início</a> | 
        <a href="/alunos">Alunos</a> | 
        <a href="/responsaveis">Responsáveis</a> | 
        <a href="/projetos">Projetos</a> | 
        <a href="/monitores">Monitores</a>
    </nav>
    
    <div id="monitores-list">
        <h2>Lista de Monitores</h2>
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Sobrenome</th>
                    <th>Telefone</th>
                </tr>
            </thead>
            <tbody>
                <% if (monitores && monitores.length > 0) { %>
                    <% monitores.forEach(monitor => { %>
                        <tr>
                            <td><%= monitor.nome %></td>
                            <td><%= monitor.sobrenome %></td>
                            <td><%= monitor.telefone %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="3">Nenhum monitor encontrado.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    
    <div id="add-monitor">
        <h2>Adicionar Monitor</h2>
        <form action="/monitores" method="POST">
            <div>
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" required>
            </div>
            <div>
                <label for="sobrenome">Sobrenome:</label>
                <input type="text" id="sobrenome" name="sobrenome" required>
            </div>
            <div>
                <label for="telefone">Telefone:</label>
                <input type="text" id="telefone" name="telefone">
            </div>
            <button type="submit">Adicionar Monitor</button>
        </form>
    </div>
</body>
</html>
